@if (NavigateTo != null)
{
    <div class="flex justify-between items-center mb-4">
        <button class="cursor-pointer bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded transform transition-transform hover:scale-110" @onclick="GoToTarget">
            <i class="fa-solid fa-turn-left"></i> Back
        </button>
    </div>
}

@code {
    [Parameter]
    public string? NavigateTo { get; set; }

    [Inject]
    private NavigationManager NavigationManager { get; set; }

    private void GoToTarget()
    {
        if (NavigateTo != null)
        {
            NavigationManager.NavigateTo(NavigateTo);
        }
    }
}
